{
    "manifest_version": 3,
    "name": "AntiSpoil",
    "description": "Proividing it with a list of literature, TV, Films that whose spoilers you want to keep away",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.js"]
        }
    ],
    "action": {
        "default_icon": {
            "16": "Icons/favicon-16x16.png",
            "32": "Icons/favicon-32x32.png"
        },
        "default_title": "AntiSpoil",
        "default_popup": "popup/index.html"
    },
    "icons": {
        "16": "Icons/favicon-16x16.png",
        "32": "Icons/favicon-32x32.png",
        "48": "Icons/spoil48x48.png",
        "128": "Icons/spoil128x128.png"
        },
    "permissions": [
        "storage"
    ]
}